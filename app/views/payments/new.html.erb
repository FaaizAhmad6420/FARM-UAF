<%= render 'home/topbar' %>
<div class="container">
  <%= render 'layouts/messages' %>
  <h1>Payment Information</h1>

  <%= form_with(model: [@order, @payment], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name, 'Name on Card' %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :details, 'Payment Details' %>
      <%= form.text_area :details, class: 'form-control', required: true %>
    </div>
    
    <br>
    <%= form.submit 'Complete Order', class: 'btn btn-primary' %>
  <% end %>
</div>

<%= render 'home/footer' %>
<%= render 'home/topbar' %>
<div class="container">
  <%= render 'layouts/messages' %>
  <h1>Shopping Cart</h1>

  <% if @cart_items.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Image</th>
          <th>Product</th>
          <th>Size</th>
          <th>Quantity</th>
          <th>Price</th>
          <th>Total</th>
          <th>Remove</th>
        </tr>
      </thead>

      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag(cart_item.product.image, size: "100x100") if cart_item.product.image.attached? %></td>
            <td><%= cart_item.product.name %></td>
            <td><%= cart_item.size.display_name %></td>
            <td><%= cart_item.quantity %></td>
            <td>$<%= cart_item.price %></td>
            <td>$<%= cart_item.quantity * cart_item.price %></td>
            <td><%= button_to 'Remove', remove_from_cart_cart_path(cart_item), method: :delete, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>

      <tfoot>
        <tr>
          <td colspan="4"></td>
          <td><strong>Total:</strong></td>
          <td>$<%= @cart_items.sum { |item| item.quantity * item.price } %></td>
        </tr>
      </tfoot>
    </table>

    <%= link_to 'Proceed to Checkout', new_order_payment_path(current_user.current_order), class: "btn btn-primary" %>
  <% else %>
    <p>Your cart is empty.</p>
  <% end %>

  <%= link_to 'Continue Shopping', product_index_path, class: 'btn btn-secondary' %>
</div>

<%= render 'home/footer' %>
<h1>Generative AI</h1>

<!-- Form for user input -->
<%= form_with url: generate_path, method: :post, local: false do |form| %>
  <div class="form-group">
    <%= form.label :prompt, 'Enter your prompt:' %>
    <%= form.text_area :prompt, rows: 3, class: 'form-control', placeholder: 'Write something for AI to generate...' %>
  </div>
  <div class="form-group mt-2">
    <%= form.submit 'Generate Content', class: 'btn btn-primary' %>
  </div>
<% end %>

